<form action="/changePassword" method="post"> 
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Change Password</h3>
	  </div>
	  <div class="panel-body">
		  <input name="oldPassword" type="password" class="form-control" placeholder="Enter old passowrd" aria-describedby="basic-addon1">
	  </div>
	  <div class="panel-body">
		  <input name="newPassword" type="password" class="form-control" placeholder="New password" aria-describedby="basic-addon1">
	  </div>
	  <div class="panel-body">
		  <input name="reEnterNewPassword" type="password" class="form-control" placeholder="Re-enter new password" aria-describedby="basic-addon1">
	  </div>
	  <div class="panel-body">
	  	<input class="btn btn-default" type="submit" value="Confirm">
	  </div>
	</div>
</form>

{{#if passwordError}}
	{{#each passwordError}}
		<div class="alert alert-danger" role="alert">{{msg}}</div>
	{{/each}}
{{/if}}